<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/back_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/back_arrow"
                    android:fontFamily="monospace"
                    android:gravity="left"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:textStyle="normal" />


            </RelativeLayout>


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Report"
                android:textSize="30dp" />




            <com.github.mikephil.charting.charts.CombinedChart
                android:id="@+id/chart12"
                android:layout_width="match_parent"
                android:layout_height="280dp" />
            <!--<com.github.mikephil.charting.charts.BarChart-->
            <!--android:id="@+id/chart1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--/>-->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="30dp"
                android:text="Today Report"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/head1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/h7"
                    android:text="" />

                <ImageButton
                    android:id="@+id/head2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/h7"
                    android:text="" />

                <ImageButton
                    android:id="@+id/head3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/h7"
                    android:text="" />
            </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="3"
    >


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Yesterday"
                android:layout_weight="1"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/textView1d3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Today"
                android:layout_weight="1"
                android:textSize="15dp" />
    <TextView
        android:id="@+id/textView1d3e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Current"
        android:layout_weight="1"
        android:textSize="15dp" />

</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingLeft="40dp"
                android:gravity="center"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/sleep_sign"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/alarm" />

                <TextView
                    android:id="@+id/sleep_record"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingRight="5dp"
                    android:text="Sleep: 2-3 hours"
                    android:textColor="#666666"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/exercise_sign"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/exercise" />
                <TextView
                    android:id="@+id/exercise_record"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingRight="5dp"
                    android:text="Exercise: 2-3 minutes"
                    android:textColor="#666666"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="40dp"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/meditation_sign"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/meditatioin" />

                <TextView
                    android:id="@+id/meditation_record"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingRight="5dp"
                    android:text="Sleep: 2-3 hours"
                    android:textColor="#666666"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/social_sign"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/social" />
                <TextView
                    android:id="@+id/social_record"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingRight="5dp"
                    android:text="Exercise: 2-3 minutes"
                    android:textColor="#666666"
                    android:textSize="15dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingLeft="40dp"
                android:gravity="center"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/water_sign"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/water" />

                <TextView
                    android:id="@+id/water_record"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingRight="5dp"
                    android:text="Sleep: 2-3 hours"
                    android:textColor="#666666"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/hobby_sign"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/hobby" />

                <TextView
                    android:id="@+id/hobby_record"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingRight="5dp"
                    android:text="Exercise: 2-3 minutes"
                    android:textColor="#666666"
                    android:textSize="15dp" />

            </LinearLayout>
          </LinearLayout>
    </ScrollView>


</LinearLayout>